<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id = "@+id/header_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button for ECE387"
        android:layout_alignParentTop = "true"
        android:layout_alignParentRight="true"
        android:background="#32CD32"
        android:textColor= "#4B0082" />

    <TextView
        android:id = "@+id/line1_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This Connor's 387 Button"
        android:layout_centerInParent="true"
        android:textColor= "#000000"/>

    <TextView
        android:id = "@+id/line2_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="It has been pressed:"
        android:layout_below="@+id/line1_text_view"
        android:layout_centerHorizontal="true"
        android:textColor= "#000000"/>

    <TextView
        android:id = "@+id/count_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_below="@+id/line2_text_view"
        android:layout_centerHorizontal="true"
        android:textColor= "#000000"/>

    <Button
        android:layout_width = "200dp"
        android:layout_height = "50dp"
        android:text="Button"
        android:onClick = "button_pressed"
        android:layout_below="@+id/count_text_view"
        android:layout_centerHorizontal="true" />




</RelativeLayout>